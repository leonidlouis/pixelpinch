{
  "name": "pixelpinch.app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:worker": "node scripts/build-worker.mjs --watch",
    "dev:all": "concurrently -n next,worker -c blue,green \"npm run dev\" \"npm run dev:worker\"",
    "build": "next build",
    "build:worker": "node scripts/build-worker.mjs",
    "prebuild": "npm run copy-wasm && npm run build:worker",
    "start": "next start",
    "lint": "eslint",
    "copy-wasm": "mkdir -p public/wasm && find node_modules/@jsquash -name '*.wasm' -exec cp {} public/wasm/ \\;",
    "postinstall": "npm run copy-wasm && npm run build:worker"
  },
  "dependencies": {
    "@jsquash/jpeg": "^1.6.0",
    "@jsquash/png": "^3.1.1",
    "@jsquash/resize": "^2.1.0",
    "@jsquash/webp": "^1.5.0",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "heic2any": "^0.0.4",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "posthog-js": "^1.312.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
